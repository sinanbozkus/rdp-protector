@{
    Layout = null;
}

@model AccountViewModel

<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Content-Language" content="en" />
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#4188c9">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <link rel="icon" href="./favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" type="image/x-icon" href="./favicon.ico" />
    <!-- Generated: 2018-04-16 09:29:05 +0200 -->
    <title>RDP Protector</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext">
    <!-- Dashboard Core -->
    <link href="~/assets/css/dashboard.css" rel="stylesheet" />
    <script src="~/assets/js/vendors/jquery-3.2.1.min.js"></script>
    @*<script src="~/assets/js/dashboard.js"></script>*@

    <!-- FormHelper -->
    <link href="/formhelper/formhelper.min.css" rel="stylesheet" />
    <script src="/formhelper/formhelper.bundle.min.js"></script>
</head>
<body class="">
    <div class="page">
        <div class="page-single">
            <div class="container">
                <div class="row">
                    <div class="col col-login mx-auto">
                        <div class="mb-6 text-center">
                            <div class="header-brand">
                                <i class="fa fa-lg fa-shield" style="margin-top:8px; margin-right:8px;"></i>RDP Protector
                            </div>
                        </div>
                        <form class="card mb-6 pb-6" asp-formhelper="true" asp-controller="Account" asp-action="Index" method="post">
                            <div class="card-body p-6">
                                <div class="card-title text-center">
                                    Enter your security key.
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" asp-for="SecurityKey" placeholder="Security Key">
                                    <span asp-validation-for="SecurityKey" class="text-danger d-block pt-2"></span>
                                </div>
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        Sign in
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>